---
import Layout from '../layouts/Layout.astro';
const title = "My Bucket List"
const actions = [
  {action: "Travel to Japan", done: false},
  {action: "Learn to play the guitar", done: true},
  {action: "Write a book", done: false},
  {action: "Run a marathon", done: false},
  {action: "See the Northern Lights", done: true}
]
---

<Layout title="bucketlist" >
    <header>
      <main>
      <div class="max-w-lg mx-auto p-6 shadow-xl rounded-lg font-poppins">
        <a href="/">Go back</a>
        <h1 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-gray-300 to-gray-500 mb-6">
          {title}
        </h1>
        <ol class="space-y-4">
          {actions.map((action) => {
            return (
              <div class={`bucketItem flex items-center space-x-4 p-4 rounded-lg shadow-md transition-transform transform hover:-translate-y-1 hover:scale-105 
                ${action.done ? 'bg-gradient-to-br from-teal-700 to-green-600' : 'bg-gradient-to-br from-gray-800 to-gray-700'}`}>
                <input 
                  type="checkbox" 
                  checked={action.done} 
                  disabled 
                  class={`h-5 w-5 border-2 rounded cursor-not-allowed 
                  ${action.done ? 'text-green-500 border-green-400' : 'text-red-500 border-red-400'}`}
                />
                <li class={`text-lg font-semibold 
                  ${action.done ? 'text-green-300 line-through' : 'text-gray-300'}`}>
                  {action.action}
                </li>
              </div>
            )
          })}
        </ol>
      </div>
      
    </header>

    </main>
</Layout>
<script>